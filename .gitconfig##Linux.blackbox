[user]
    email = radoslav.georgiev@securax.org
    name = Radoslav Georgiev
[alias]
    st = status
    ci = commit
    co = checkout
    br = branch
    fr = !git pull --rebase
    sfr = !git stash && git pull --rebase && git stash pop
[core]
    autocrlf = input
    editor = vim
    whitespace = cr-at-eol
[credential]
    helper = store
[push]
    default = simple
[merge]
    tool = meld
