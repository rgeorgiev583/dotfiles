[user]
	email = rgeorgiev583@gmail.com
	name = Radoslav Georgiev
[credential]
	helper = store
[rerere]
	enabled = true
[core]
	pager = delta
	whitespace = cr-at-eol
[diff]
	tool = lvimdiff
[diff "sqlite3"]
	binary = true
	textconv = "echo .dump | sqlite3"
[difftool]
	prompt = false
[difftool "lvimdiff"]
	cmd = lvim -d $LOCAL $REMOTE
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[merge]
	conflictstyle = diff3
	tool = lvim_mergetool
[mergetool "lvim_mergetool"]
	cmd = lvim -c "MergetoolStart" "$MERGED" "$BASE" "$LOCAL" "$REMOTE"
	trustExitCode = true
[mergetool "vscode"]
	cmd = code --wait --merge "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
[submodule]
	fetchJobs = 0
[pull]
	rebase = true
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true  # use n and N to move between diff sections
	line-numbers = true
	light
[diff]
	colorMoved = default
[init]
	defaultBranch = main
[fetch]
	prune = true
[push]
	autoSetupRemote = true
[pager]
	difftool = true